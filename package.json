{
  "name": "clamp-it",
  "displayName": "Clamp it!",
  "description": "CSS clamp() function generator",
  "icon": "gfx/clamp-it.png",
  "author": "Silvestar BistroviÄ‡ <me@silvestar.codes> (https://www.silvestar.codes/)",
  "publisher": "starbist",
  "repository": {
    "type": "git",
    "url": "git+https://github.com:maliMirkec/clamp-it.git"
  },
  "version": "0.0.6",
  "engines": {
    "vscode": "^1.93.0"
  },
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "properties": {
        "clampExtension.globalMinViewport": {
          "type": "number",
          "default": 600,
          "description": "Global minimum viewport size in pixels."
        },
        "clampExtension.globalMaxViewport": {
          "type": "number",
          "default": 1200,
          "description": "Global maximum viewport size in pixels."
        },
        "clampExtension.baseFontSize": {
          "type": "number",
          "default": 16,
          "description": "Base font size for converting pixels to rem."
        }
      }
    },
    "commands": [
      {
        "command": "extension.clampIt",
        "title": "Clamp it!"
      }
    ],
    "tags": [
      "CSS",
      "clamp()",
      "responsive design",
      "viewport units",
      "web development",
      "design tools"
    ],
    "categories": [
      "Development",
      "Utilities",
      "Design",
      "Styling"
    ],
    "readme": "./README.md"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.11.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "license": "MIT",
  "licenseFile": "LICENSE.md",
  "homepage": "https://github.com/maliMirkec/clamp-it#readme",
  "bugs": {
    "url": "https://github.com/maliMirkec/clamp-it/issues"
  }
}
